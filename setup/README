- https://wiki.archlinux.org/index.php/Installation_guide
- pacman -S reflector rsync
reflector --verbose --sort rate --country Russia > ~/mirrolist1
less mirrolist1
mv mirrolist1 /etc/pacman.d/mirrorlist
- boot loader
- network
pacman -S networkmanager
systemctl enable NetworkManager.service
- useradd -m -G wheel kfuntov
- passwd kfuntov
- pacman -S sudo
- EDITOR=nvim visudo
- relogin
- sudo pacman -S git
- git clone --bare https://github.com/funtaps/dotfiles.git ~/.dotfiles
- alias .df='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'
- .df restore --staged *
- .df restore *

